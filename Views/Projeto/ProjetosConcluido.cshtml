@model List<_2MVC.Models.Projeto>

@{
    ViewData["Title"] = "Projetos Concluídos";
}

<style>
    /* Card base style for concluído */
    .card-status {
        border-radius: 10px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 2px solid #28a745;
        background-color: #110E59;
    }
    .card-status:hover {
        transform: translateY(-10px);
        box-shadow: 0 10px 20px rgba(38, 22, 140, 0.18);
    }
    .card-status .card-title {
        color: #28a745;
        display: flex;
        align-items: center;
        gap: 8px;
        font-weight: bold;
    }
    .card-status .card-title i {
        color: #28a745;
    }
    .card-status .card-text,
    .card-status .text-muted {
        color: #F2F2F2 !important;
    }

    /* Buttons */
    .btn-primary {
        background: var(--primary);
        border-color: var(--secondary);
        color: var(--text-light);
    }
    .btn-primary:hover, .btn-primary:focus {
        background: var(--secondary);
        border-color: var(--primary);
        color: var(--text-light);
    }
    .btn-success {
        background: #198754;
        border-color: #198754;
        color: #fff;
    }
    .btn-success:hover, .btn-success:focus {
        background: #157347;
        border-color: #146c43;
        color: #fff;
    }
    .btn-outline-secondary {
        border-color: #F2F2F2;
        color: #F2F2F2;
        background: transparent;
    }
    .btn-outline-secondary:hover, .btn-outline-secondary:focus {
        background: #26168C;
        color: #F2F2F2;
        border-color: #26168C;
    }

    /* Modal */
    .modal-content {
        background: var(--dark);
        color: var(--text-light);
        border-radius: 16px;
        border: 2px solid #28a745;
    }
    .modal-header, .modal-footer {
        border: none;
    }
    .modal-title {
        color: #28a745;
    }
    .modal-header {
        border-bottom: 1px solid #28a745 !important;
    }
    .modal-footer {
        border-top: 1px solid #28a745 !important;
    }
    .btn-close-white {
        filter: invert(1);
    }
    .modal-label-green {
        color: #28a745;
        font-weight: bold;
    }
    .btn-modal-close {
        border-color: #28a745;
        color: #28a745;
    }
</style>


<div class="container mt-4">
    <h1 class="text-center mb-4 fw-bold" style="color: #28a745;">@ViewData["Title"]</h1>
    @await Html.PartialAsync("_cardsProjetos", Model)
</div>