@model List<_2MVC.Models.Projeto>

@{
    ViewData["Title"] = "Projetos Cancelados";
}

<style>
    /* Card base style for cancelado */
.card-status {
    /* agora é o estilo de cancelado */
    border: 2px solid #dc3545;
    background-color: #2d1a1a;
    border-radius: 10px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}
.card-status:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 20px rgba(220, 53, 69, 0.18);
}
.card-status .card-title {
    color: #dc3545;
    display: flex;
    align-items: center;
    gap: 8px;
    font-weight: bold;
}
.card-status .card-title i {
    color: #dc3545;
}
.card-status .card-text,
.card-status .text-muted {
    color: #F2F2F2 !important;
}

/* Botões */
.btn-outline-secondary {
    border-color: #F2F2F2;
    color: #F2F2F2;
    background: transparent;
}
.btn-outline-secondary:hover, .btn-outline-secondary:focus {
    background: #2d1a1a;
    color: #F2F2F2;
    border-color: #dc3545;
}
.btn-success {
    background: #198754;
    border-color: #198754;
    color: #fff;
}
.btn-success:hover, .btn-success:focus {
    background: #157347;
    border-color: #146c43;
    color: #fff;
}
.btn-primary {
    background: var(--primary);
    border-color: var(--secondary);
    color: var(--text-light);
}
.btn-primary:hover, .btn-primary:focus {
    background: var(--secondary);
    border-color: var(--primary);
    color: var(--text-light);
}

/* Modal */
.modal-content {
    background: var(--dark);
    color: var(--text-light);
    border-radius: 16px;
    border: 2px solid #dc3545;
}
.modal-header, .modal-footer {
    border: none;
}
.modal-title {
    color: #dc3545;
}
.modal-header {
    border-bottom: 1px solid #dc3545 !important;
}
.modal-footer {
    border-top: 1px solid #dc3545 !important;
}
.btn-close-white {
    filter: invert(1);
}
.modal-label-green {
    color: #dc3545;
    font-weight: bold;
}
.btn-modal-close {
    border-color: #dc3545;
    color: #dc3545;
}
</style>


<div class="container mt-4">
    <h1 class="text-center mb-4 fw-bold" style="color: red;">@ViewData["Title"]</h1>
    @await Html.PartialAsync("_cardsProjetos", Model)
</div>