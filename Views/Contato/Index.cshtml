@{
    ViewData["Title"] = "Contato";
}
<style>
    .contact-hero {
    background: linear-gradient(135deg, #26168C 60%, #110E59 100%);
    color: #fff;
    padding: 60px 20px 40px;
    text-align: center;
    }

    .contact-hero h1 {
    font-size: 2.5rem;
    font-weight: bold;
    margin-bottom: 10px;
    }

    .contact-hero p {
    font-size: 1.2rem;
    max-width: 600px;
    margin: 0 auto;
    }

    .contact-hero .highlight {
    color: #FFD700;
    }

    .contact-info {
    max-width: 700px;
    margin: 40px auto;
    background: #fff;
    border-radius: 12px;
    box-shadow: 0 4px 24px rgba(38, 22, 140, 0.08);
    padding: 32px 24px;
    color: #26168C;
    }

    .contact-info h2 {
    font-size: 1.8rem;
    font-weight: 600;
    margin-bottom: 24px;
    text-align: center;
    }

    .contact-info ul {
    list-style: none;
    padding: 0;
    margin: 0;
    }

    .contact-info li {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 20px;
    font-size: 1rem;
    flex-wrap: wrap;
    }

    .contact-info a {
    color: inherit;
    text-decoration: none;
    }

    .contact-info a:hover {
    text-decoration: underline;
    }

    .contact-cta {
    text-align: center;
    margin: 40px 20px 60px;
    }

    .contact-cta a {
    background: linear-gradient(90deg, #26168C 0%, #110E59 100%);
    color: #fff;
    padding: 14px 36px;
    border-radius: 30px;
    font-size: 1.1rem;
    font-weight: 600;
    text-decoration: none;
    display: inline-block;
    box-shadow: 0 2px 8px rgba(38, 22, 140, 0.1);
    transition: transform 0.2s, box-shadow 0.2s;
    }

    .contact-cta a:hover {
    transform: scale(1.05);
    box-shadow: 0 6px 24px rgba(38, 22, 140, 0.18);
    }

    .contact-cta .highlight {
    color: #FFD700;
    }

    /* Responsivo */
    @@media (max-width: 768px) {
    .contact-hero h1 {
        font-size: 2rem;
    }

    .contact-hero p {
        font-size: 1rem;
    }

    .contact-info h2 {
        font-size: 1.5rem;
    }

    .contact-info li {
        font-size: 0.95rem;
        flex-direction: column;
        align-items: flex-start;
    }

    .contact-cta a {
        font-size: 1rem;
        padding: 12px 28px;
    }
    }


</style>

